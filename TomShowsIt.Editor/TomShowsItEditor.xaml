<Window x:Class="TomShowsIt.Editor.TomShowsItEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomShowsIt.Editor"
        mc:Ignorable="d"
        Title="TomShowsIt Editor" Height="450" Width="800"
        Background="WhiteSmoke"
        WindowStartupLocation="CenterScreen"
        KeyDown="OnKeyPressed">
    <Grid Margin="3 0 3 3">
        <Image x:Name="EditorImage" Stretch="UniformToFill" MouseRightButtonDown="AddTomRight" MouseLeftButtonDown="AddTomLeft" />
    </Grid>
</Window>
